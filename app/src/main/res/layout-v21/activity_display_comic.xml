<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.comicviewer.cedric.comicviewer.ViewPagerFiles.DisplayComicActivity">


    <com.comicviewer.cedric.comicviewer.ViewPagerFiles.ComicViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:transitionName="cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comicpager"/>
    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typeface="roboto_slab_regular"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        fab:fab_type="normal"
        fab:fab_shadow="true"
        fab:fab_colorNormal="@color/Teal"
        fab:fab_colorPressed="@color/TealDark"
        fab:fab_colorRipple="@color/TealLight" />
</RelativeLayout>
