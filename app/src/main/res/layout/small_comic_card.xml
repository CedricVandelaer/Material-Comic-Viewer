<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardElevation="8dp"
    android:id="@+id/small_card"
    android:clickable="true"
    android:foreground="@drawable/ripple"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.devspark.robototextview.widget.RobotoTextView
            android:text="Title"
            android:id="@+id/small_title"
            android:layout_width="fill_parent"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginRight="40dp"
            />
        
        <ImageView
            android:id="@+id/small_read_indicator"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="4dp"
            android:layout_alignBottom="@id/small_title"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@id/small_title"
            android:layout_height="wrap_content">
            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/small_issue_number"
                android:layout_weight="1"
                android:text="Issue number: "
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:padding="6dp"
                android:layout_marginStart="4dp"/>
            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/small_page_count"
                android:layout_weight="1"
                android:text="Pages: "
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="4dp"
                android:padding="6dp"/>
            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/small_year"
                android:layout_weight="1"
                android:text="Year: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginStart="4dp"
                android:padding="6dp"/>
            
        </LinearLayout>
        
    </RelativeLayout>



</android.support.v7.widget.CardView>