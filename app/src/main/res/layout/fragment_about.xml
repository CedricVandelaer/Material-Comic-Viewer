<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.comicviewer.cedric.comicviewer.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/logo_field"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/logo"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/logo_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Comic Viewer"
            android:textSize="40sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/updates_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/changelog" />
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/rate_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="#1E88E5"
                    android:text="@string/rate_app" />
            </LinearLayout>

            <com.bluejamesbond.text.DocumentView
                xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/about_text"
                ext:documentView_textColor="@android:color/white"
                ext:documentView_textAlignment="justified"
                ext:documentView_text="@string/about_text"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_drawable"
                    android:background="@drawable/image_view_border"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/find_us_text_view"
                        android:text="@string/find_comic_viewer_on"
                        android:layout_marginBottom="8dp"/>
                    <RelativeLayout
                        android:id="@+id/social_media_layout"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:id="@+id/google_plus_logo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/google_plus_logo"
                            android:layout_marginRight="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="6dp"/>
                        <TextView
                            android:id="@+id/google_plus_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_toEndOf="@id/google_plus_logo"
                            android:layout_toRightOf="@id/google_plus_logo"
                            android:layout_alignBottom="@id/google_plus_logo"
                            android:text="Google+"/>

                        <ImageView
                            android:layout_below="@id/google_plus_logo"
                            android:id="@+id/facebook_logo"
                            android:layout_alignLeft="@id/google_plus_logo"
                            android:layout_alignStart="@id/google_plus_logo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/facebook_logo"
                            android:layout_marginRight="2dp"
                            android:layout_marginEnd="2dp"/>
                        <TextView
                            android:id="@+id/facebook_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_toEndOf="@id/facebook_logo"
                            android:layout_toRightOf="@id/facebook_logo"
                            android:layout_alignBottom="@id/facebook_logo"
                            android:text="Facebook"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/thanks_text_view"
                android:layout_gravity="center"
                android:text="@string/thanks_to_text"/>

        </LinearLayout>
    </ScrollView>

    

</LinearLayout>
