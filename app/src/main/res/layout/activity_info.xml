
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.comicviewer.cedric.comicviewer.Info.InfoActivity">

    <RelativeLayout
        android:id="@+id/comic_info_layout"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp">
        <TextView android:text="Batman and Robin"
            android:id="@+id/title_text_view"
            android:background="@color/Red"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/cover_image_view"
            android:transitionName="cover"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/title_text_view"
            android:layout_width="160dp"
            android:layout_height="240dp" />
        <ScrollView
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_below="@id/title_text_view"
            android:layout_toEndOf="@id/cover_image_view"
            android:layout_toRightOf="@id/cover_image_view"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/issue_number_text_view"
                    android:text="Issue number: 8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/year_text_view"
                    android:text="Year: 1994"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/pages_text_view"
                    android:text="Pages: 23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/filename_text_view"
                    android:text="Filename: blabla.cbr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/filesize_text_view"
                    android:text="Filesize: 34.2mb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/writer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Writer: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/penciller_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penciller: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/inker_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inker: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/colorist_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colorist: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/letterer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letterer: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/editor_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editor: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/cover_artist_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cover artist: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/story_arcs_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Story arcs: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/characters_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characters: Lol"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/additional_info_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional info: Lol"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <ScrollView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/description_text_view"
            android:gravity="center"
            android:text="Description:\nBatman and robin are trying to catch the joker. The joker laughs and Robin dies a tragic dead."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="8dp"/>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/button_background_layout"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/edit_button"
            android:text="Edit"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
