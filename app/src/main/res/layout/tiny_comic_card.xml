<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <include layout="@layout/tiny_card_background_options"/>

    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--What you want to show in SurfaceView-->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/card"
            android:clickable="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:transitionName="cover"
                    android:id="@+id/cover"
                    android:layout_height="102dp"
                    android:layout_width="65dp"
                    android:layout_centerVertical="true"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:text="Title"
                    android:id="@+id/title"
                    android:layout_toRightOf="@id/cover"
                    android:layout_width="fill_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    />
                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/issue_number"
                    android:text="Issue number: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_toRightOf="@id/cover"
                    android:textColor="#000000"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"/>
                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/page_count"
                    android:text="Pages: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/issue_number"
                    android:layout_toRightOf="@id/cover"
                    android:textColor="#000000"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"/>
                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/year"
                    android:text="Year: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/page_count"
                    android:layout_toRightOf="@id/cover"
                    android:textColor="#000000"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"/>
                <ImageView
                    android:id="@+id/normal_favorite_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="6dp"
                    android:src="@drawable/star_outline"
                    android:layout_alignParentBottom="true"/>
                <ImageView
                    android:id="@+id/last_read_indicator"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="42dp"
                    android:layout_alignParentBottom="true"/>
                <ImageView
                    android:id="@+id/manga_indicator"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="78dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>