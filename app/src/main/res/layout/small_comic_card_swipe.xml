<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <LinearLayout
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_wrapper"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <!--What you want to show-->
        <LinearLayout
            android:id="@+id/delete_button_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:adjustViewBounds="true"
                android:layout_margin="16dp"
                fab:fab_type="normal"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/Red"
                fab:fab_colorPressed="@color/RedDark"
                fab:fab_colorRipple="@color/RedLight" />
            <TextView
                android:id="@+id/delete_text"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mark_read_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/mark_read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:adjustViewBounds="true"
                android:layout_margin="16dp"
                fab:fab_type="normal"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/Teal"
                fab:fab_colorPressed="@color/TealDark"
                fab:fab_colorRipple="@color/TealLight" />
            <TextView
                android:id="@+id/mark_read_text"
                android:text="Mark as read"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mark_unread_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/mark_unread_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:adjustViewBounds="true"
                android:layout_margin="16dp"
                fab:fab_type="normal"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/Cyan"
                fab:fab_colorPressed="@color/CyanDark"
                fab:fab_colorRipple="@color/CyanLight" />
            <TextView
                android:id="@+id/mark_unread_text"
                android:text="Mark as unread"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--What you want to show in SurfaceView-->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/small_card_width"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/small_card"
            android:clickable="true"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:text="Title"
                        android:id="@+id/small_title"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:padding="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/small_issue_number"
                        android:text="Issue number: "
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="6dp"/>
                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/small_page_count"
                        android:text="Pages: "
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:padding="6dp"/>
                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/small_year"
                        android:gravity="center"
                        android:text="Year: "
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:padding="6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/small_read_indicator"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:layout_margin="8dp"/>

                    <ImageView
                        android:id="@+id/small_favorite_button"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star_outline"
                        android:layout_margin="8dp"/>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>